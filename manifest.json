{
  "manifest_version": 3,
  "name": "Sales Notification Extension",
  "version": "1.0",
  "description": "Shows a custom popup when a sale is made.",
  "permissions": [
    "alarms",
    "storage",
    "system.display"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "action.html"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
